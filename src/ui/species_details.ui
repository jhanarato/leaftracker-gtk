<?xml version='1.0' encoding='UTF-8'?>
<interface>
    <template class="SpeciesDetailsPage" parent="AdwNavigationPage">
        <signal name="notify::reference" handler="reference_changed"/>
        <property name="title">Species Details</property>
        <property name="tag">species-details-page</property>
        <property name="child">
            <object class="AdwToolbarView">
                <child type="top">
                    <object class="AdwHeaderBar">
                        <property name="show-end-title-buttons">false</property>
                    </object>
                </child>
                <property name="content">
                    <object class="AdwPreferencesPage">
                        <property name="width-request">300</property>
                        <property name="halign">center</property>
                        <child>
                            <object class="AdwPreferencesGroup">
                                <property name="halign">fill</property>
                                <property name="title">Elasticsearch Reference</property>
                                <child>
                                    <object class="AdwEntryRow" id="reference_display">
                                        <property name="editable">false</property>
                                        <style>
                                            <class name="monospace"/>
                                        </style>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="AdwPreferencesGroup">
                                <property name="halign">fill</property>
                                <property name="title">Current Scientific Name</property>
                                <property name="separate-rows">true</property>
                                <child>
                                    <object class="AdwEntryRow" id="current_scientific_name">
                                        <property name="title">current</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="AdwButtonRow">
                                        <property name="title">Update Current Name</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="PreviousScientificNames" id="previous-scientific-names"/>
                        </child>
                        <child>
                            <object class="AdwPreferencesGroup">
                                <property name="halign">fill</property>
                                <child>
                                    <object class="AdwButtonRow" id="save_button">
                                        <property name="title">Save Changes</property>
                                        <style>
                                            <class name="suggested-action"/>
                                        </style>
                                        <signal name="activated" handler="save_button_activated"/>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </property>
            </object>
        </property>
    </template>
</interface>